<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_custom_expense_view_form" model="ir.ui.view">
        <field name="name">hr_custom_expense_view_form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/field[@name='state']" position="attributes">
                <attribute name="attrs">
                    {'statusbar_visible': 'draft,reported,direct,manager_of_manager,hr,approved,done,refused'}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>