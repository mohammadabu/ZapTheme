<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Custom Front-end assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/theme_zap/static/src/js/snip.js"/>
            <script type="text/javascript" src="/theme_zap/static/src/js/snipOption.js"/>
        </xpath>
    </template>
    <template id="adding_new_snippet_to_website_snippetsr" inherit_id="website.snippets" name="Place into building blocks bar">
        <xpath expr="//div[@id='snippet_structure']" position="inside">
            <div class="o_panel_body">
                <t t-snippet="theme_zap.custom_para_with_a_redirect" t-thumbnail="/theme_zap/static/src/img/backgrounds/01.png"/>
            </div>
        </xpath>
    </template>
    <template id="custom_para_with_a_redirect" name="My Custom Snippet 1234">
        <section >
            <div class="container for_testing" data-loading="true" data-template="theme_zap.custom_snippet_template">

            </div>
        </section>
    </template>
    <template id="custom_snippet_template">
        <div class="row for_testing_1" t-foreach="posts" t-as="p">
            <div class="col-md-6 col-md-offset-3 mb16 mt16">
                <p class="text-center">
                    <b>A Small Subtitle new new new new new new new new</b>
                </p>
                <p class="text-center">
                    Choose a vibrant image and write an inspiring paragraph
                    about it. It does not have to be long enough, but it should
                    reinforce your image.
                </p>
                <p class="text-center">
                    <a href="/contactus">Contact us</a>
                </p>
            </div>
        </div>
    </template>
    <template id="custom_para_with_a_redirect_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-js="js_get_test_limit" data-selector=".custom_para_with_a_redirect" data-target=".custom_para_with_a_redirect" data-no-check="true">
                <we-collapse-area>
                    <we-toggler><i class="fa fa-sort-numeric-asc"/>Limit</we-toggler>
                    <we-collapse data-no-preview="true">
                        <we-button data-posts-limit="1">1 post max</we-button>
                        <we-button data-posts-limit="2">2 posts max</we-button>
                        <we-button data-posts-limit="3">3 posts max</we-button>
                        <we-button data-posts-limit="4">4 posts max</we-button>
                        <we-button data-posts-limit="5">5 posts max</we-button>
                        <we-button data-posts-limit="6">6 posts max</we-button>
                        <we-button data-posts-limit="7">7 posts max</we-button>
                        <we-button data-posts-limit="8">8 posts max</we-button>
                        <we-button data-posts-limit="9">9 posts max</we-button>
                        <we-button data-posts-limit="10">10 posts max</we-button>
                    </we-collapse>
                </we-collapse-area>
            </div>
            <div>hhhhhhhhhh</div>
        </xpath>
    </template>
</odoo>

